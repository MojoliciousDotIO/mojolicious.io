
% if ( my $tag_text = $self->data->{ tag_text } ) {
<div class="widget widget_text">
  <h5 class="widget-title"><%= $self->data->{ tag } %></h5>
  <div class="textwidget">
    <%= markdown $tag_text %>
  </div>
</div>
% }

